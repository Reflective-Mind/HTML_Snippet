{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*\\.(js|css|svg|png|jpg|ico|json))",
            "dest": "public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.html"
        }
    ],
    "env": {
        "REACT_APP_API_URL": "https://mbti-render.onrender.com",
        "REACT_APP_SOCKET_URL": "https://mbti-render.onrender.com",
        "NODE_ENV": "production"
    }
} 